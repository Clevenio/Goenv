#!/usr/bin/env bash

GO_BINARY_NAME=go

GO_VERSION_PATH=$(goenv exec)

GOENV_ROOT="/Users/joedoe/.goenv" \
	GOPATH=$GO_VERSION_PATH \
	GOBIN=$GO_VERSION_PATH/bin \
	"$GO_VERSION_PATH/bin/$GO_BINARY_NAME" "$@"

if [[ "$@" =~ 'get' ]]
then
	goenv rehash
fi

if [[ "$@" =~ 'install' ]]
then
	goenv rehash
fi
